@model Guns_of_the_Old_West.Models.Speler;

@{
    ViewBag.Title = "Winnaar!";
    Layout = "_Layout";
}

<h2 class="mt-3 mb-5">Scherpschutter!</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Counter" value="@Model.Counter" />
    <label asp-for="Voornaam"></label>
    <input asp-for="Voornaam" class="form-control"/>
    <span asp-validation-for="Voornaam" class="bg-danger text-white"></span>
    <br/>

    <label asp-for="Naam"></label>
    <input asp-for="Naam" class="form-control"/>
    <span asp-validation-for="Naam" class="bg-danger text-white"></span>
    <br/>

    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email" class="bg-danger text-white"></span>
    <br/>

    <label asp-for="Telefoon"></label>
    <input asp-for="Telefoon" class="form-control"/>
    <span asp-validation-for="Telefoon" class="bg-danger text-white"></span>

    <input type="submit" value="Versturen" class="btn btn-block btn-lg mt-5 ml-1 mr-1"
           style="
                  background-color: lightgray !important;
                  border: 5px solid #555657 !important;
                  border-radius:  10px !important;
                  color: #555657;"/>
</form>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button class="btn btn-block btn-lg mt-5 ml-1 mr-1" type="submit" asp-action="Index" asp-route-kogels="@Model.Counter"
            style="
                  background-color: lightgray !important;
                  border: 5px solid #555657 !important;
                  border-radius:  10px !important;
                  color: #555657;
           ">Naar startscherm</button>
</form>