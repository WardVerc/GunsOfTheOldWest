@{
    ViewBag.Title = "Verkoop";
    Layout = "_Layout";
}

<h2 class="mt-3 mb-5">Kogels kopen?</h2>

<form method="post">
    <div class="container-fluid d-flex justify-content-center" style="
        width:  100%;
        height:  80px;">
   
        <button class="btn btn-block btn-lg mt-0 ml-1 mr-1" type="submit" asp-action="Index" asp-route-kogels="2"
           style="
                  background-color: lightgray !important;
                  border: 5px solid #555657 !important;
                  border-radius:  10px !important;
                  color: #555657;
           ">Koop 2 kogels voor 1€</button>
        <button class="btn btn-block btn-lg mt-0 ml-1 mr-1" type="submit" asp-action="Index" asp-route-kogels="7"
           style="
                  background-color: lightgray !important;
                  border: 5px solid #555657 !important;
                  border-radius:  10px !important;
                  color: #555657;
           ">Koop 7 kogels voor 4€</button>
        <button class="btn btn-block btn-lg mt-0 ml-1 mr-1" type="submit" asp-action="Index" asp-route-kogels="12"
           style="
                  background-color: lightgray !important;
                  border: 5px solid #555657 !important;
                  border-radius:  10px !important;
                  color: #555657;
           ">Koop 12 kogels voor 7€</button>
   
    </div>
</form>