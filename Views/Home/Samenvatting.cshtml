@model Guns_of_the_Old_West.Models.Speler;

@{
    //tijd in het nederlands omzetten
    var nederlands = new System.Globalization.CultureInfo("nl-BE");
    var datum = DateTime.Now.ToString("dddd, dd MMMM yyyy", nederlands.DateTimeFormat);
    
    //eerste letter moet uppercase zijn
    var datumUppercase = char.ToUpper(datum[0]) + datum.Substring(1);
}

<h2 class="mt-3 mb-5">Gefeliciteerd @Model.Voornaam!</h2>

<div class="row d-flex align-items-start">
    <div class="col">
        <h5>Jouw gegevens:</h5>
        <p>Voornaam: @Model.Voornaam</p>
        <p>Naam: @Model.Naam</p>
        <p>Email: @Model.Email</p>
        <p>Telefoonnummer: @Model.Telefoon</p>
        <p>Gemaakt op: @datumUppercase</p>
        <p>Je had nog <b>@Model.Counter kogels</b> over.</p>
    </div>

<div class="col">
    <h5>Over de auteur</h5>
    <p>Ward Vercuyssen</p>
    <p>Hoopt van zijn hobby zijn beroep te maken.</p>
</div>

</div>

<div class="align-self-end">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="btn btn-block btn-lg ml-1 mr-1" type="submit" asp-action="Index" asp-route-kogels="@Model.Counter"
                style="
                      background-color: lightgray !important;
                      border: 5px solid #555657 !important;
                      border-radius:  10px !important;
                      color: #555657;
                      margin-top: 20%;
               ">Naar startscherm</button>
    </form>
</div>